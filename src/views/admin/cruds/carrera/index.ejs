<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <%- include('../../../partials/head') %>
    </head>
    <body>
        <%- include('../../../partials/nav_admin') %>

        <main class="container p-4">
            <h2 class="mb-4"><%= title %></h2>

            <div class="mb-4">
                <p>Agregar una carrera</p>
                <a href="/admin/carrera/create" class="btn btn-secondary"
                    >Agregar</a
                >
            </div>

            <% if (error) { %>
            <div
                class="alert alert-danger alert-dismissible fade show mb-4"
                role="alert"
            >
                <strong>Error!</strong> <%= error.message %>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                ></button>
            </div>
            <% } %>

            <table class="table">
                <thead>
                    <tr class="table-secondary text-center">
                        <th scope="col">ID</th>
                        <th scope="col">Clave</th>
                        <th scope="col">Nombre</th>
                        <th scope="col" colspan="2">Aciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% carreras.forEach(carrera => { %>
                    <tr class="text-center">
                        <td><%= carrera.carrera_id %></td>
                        <td><%= carrera.carrera_clave %></td>
                        <td><%= carrera.carrera_nombre %></td>
                        <td>
                            <a
                                class="btn btn-success"
                                href="/admin/carrera/update/<%= carrera.carrera_id %>"
                                >Actualizar</a
                            >
                        </td>
                        <td>
                            <a
                                class="btn btn-danger"
                                href="/admin/carrera/delete/<%= carrera.carrera_id %>"
                                >Eliminar</a
                            >
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>

        <%- include('../../../partials/footer') %>
    </body>
</html>
